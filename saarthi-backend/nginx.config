
"/etc/nginx/sites-available/saarthi" [noeol] 46L, 1324B                                                                                   3,4           All
server {
    server_name saarthiev.com www.saarthiev.com;

    # Frontend (everything goes to port 3000)
    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Backend API (only /api goes to port 4000)
    location /api/ {
        proxy_pass http://localhost:4000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/saarthiev.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/saarthiev.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.saarthiev.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = saarthiev.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name saarthiev.com www.saarthiev.com;
    return 404; # managed by Certbot




}
